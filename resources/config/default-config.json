{
  "check_comment": {
    "active": true,
    "params": {
      "allow_TODOs": true,
      "allow_generic_comments": false
    }
  },
  "check_max_line_length": {
    "active": true,
    "params": {
      "max_line_length": 80
    }
  },
  // Source File Encoding.
  "check_source_file_encoding": {
    "active": true,
    "params": {
      "source_file_encoding": "UTF-8"
    }
  },
  // Variables should begin with a lower case first letter.
  "check_variable_lowercase_start": {
    "active": true,
    "params": {}
  },
  // Variable types should be capitalised eg Boolean, Void, String.
  "check_variable_types_capitalised": {
    "active": true,
    "params": {}
  },
  // Class names should match the file name.
  "check_classname_filename_match": {
    "active": true,
    "params": {}
  },
  // Number of classes per file.
  "check_classes_per_file": {
    "active": true,
    "params": {
      "classes_per_file": 1
    }
  },
  // Variables correctly spelt - checked with PyEnchant.
  "check_spell_check": {
    "active": true,
    "params": {}
  },
  // No print statements.
  "check_trace_free": {
    "active": true,
    "params": {}
  },
  // No comments allowed except TODOs.
  "check_only_todo_comments": {
    "active": true,
    "params": {}
  },
  // TODOs must be initialed. ' TODO JS.
  "check_initialed_todos": {
    "active": true,
    "params": {}
  },
  // Explicitly declare function and function parameter types.
  "check_fn_and_fn_param_types": {
    "active": true,
    "params": {}
  },
  // All function parameters prefixed with an underscore.
  "check_underscore_fn_params": {
    "active": true,
    "params": {}
  },
  // Consecutive blank lines allowed.
  "check_consecutive_empty_lines": {
    "active": true,
    "params": {
      "consecutive_empty_lines": 1
    }
  },
  // Must use spaces or tabs not both.
  "check_spaces_or_tabs": {
    "active": true,
    "params": {
      "tab_size": 2
    }
  },
  // Number of spaces around operators except colon.
  "check_spaces_around_operators": {
    "active": true,
    "params": {
      "spaces_around_operators": 2
    }
  }, 
  // Spaces between method name and parameter list.
  "check_method_spaces": {
    "active": true,
    "params": {
      "method_spaces": 1
    }
  } 
}